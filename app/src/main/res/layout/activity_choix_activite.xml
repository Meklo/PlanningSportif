<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fr.utt.if26.planningsportif.Activities.ChoixActiviteActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        android:gravity="center"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.72"
            android:text="Sélectionner une activité" />

        <Button
            android:id="@+id/activiteTpsBtnChoixActivite"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/activiteTpsBtnChoixActivite" />

        <Button
            android:id="@+id/activiteRepetBtnChoixActivite"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/activiteRepetBtnChoixActivite" />

        <Button
            android:id="@+id/validerToutesActivités"
            android:layout_width="220dp"
            android:layout_height="70dp"
            android:layout_weight="0.52"
            android:text="Valider" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
